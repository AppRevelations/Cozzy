<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            
            <Button
        android:id="@+id/bshirt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shirt" />

    <EditText
        android:id="@+id/etshirtnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="number of shirts"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btrouser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trouser" />

    <EditText
        android:id="@+id/ettrousernumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="number of trouser"
        android:ems="10" />

    
        <Button
        android:id="@+id/bwoollen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Woollens" />

    <EditText
        android:id="@+id/etwoolennumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="number of woollen"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bothers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="others" />

    <EditText
        android:id="@+id/etothernumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="number of others"
        android:ems="10" />

    <Button
        android:id="@+id/bdonate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donate" />
    
            
            
            
        </LinearLayout>
    </ScrollView>

    
</LinearLayout>
