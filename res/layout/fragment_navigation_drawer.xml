<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6E6E6E"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical" >

            <!-- android:background="#255073" -->

            

            <com.apprevelations.widget.AppRevelationsModifiedProfilePictureView
                android:id="@+id/selection_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                facebook:preset_size="normal" >
            </com.apprevelations.widget.AppRevelationsModifiedProfilePictureView>

        </RelativeLayout>
		
        
       <LinearLayout
           
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E6E6E"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="Home"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#E6E6E6" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navigation_drawer_item_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E6E6E"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/home_w" />

            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="Home"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#E6E6E6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_drawer_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E6E6E"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_person" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="My Account"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#E6E6E6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_drawer_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E6E6E"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/inotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_unread" />

            <TextView
                android:id="@+id/tnotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="Notifications"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#E6E6E6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_drawer_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E6E6E"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/ihistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_labels" />

            <TextView
                android:id="@+id/thistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="History"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#E6E6E6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_drawer_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E6E6E"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/icozzy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_about" />

            <TextView
                android:id="@+id/tcozzy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="About Cozzy"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#E6E6E6" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>